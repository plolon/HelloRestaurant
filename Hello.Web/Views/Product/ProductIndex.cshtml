@model IEnumerable<Hello.Web.DTOs.ProductDto>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Create" class="btn btn-outline-primary"><i class="fa-solid fa-plus"></i>Create New Product</a>
        </div>
    </div>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" alt="@product.Name    " src="@product.ImageUrl">
                <div class="card-body">
                  <p class="card-text">@product.Name</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                    </div>
                    <small class="text-muted">@product.Price $</small>
                  </div>
                </div>
              </div>
            </div>
        }
    </div>
</div>

